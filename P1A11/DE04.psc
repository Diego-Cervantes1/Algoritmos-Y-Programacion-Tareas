// Suma de los numeros pares comprendidos entre 2 y 100
Algoritmo DE04
	Definir Suma, numero Como Entero
	suma<-2;
	numero<-4;
	Mientras numero <= 100 Hacer
	Suma <- Suma + Numero
	Numero <- Numero +2
FinMientras

	
	Escribir "La suma de los numeros pares entre 2 y 100 es: ", Suma

	
FinAlgoritmo
